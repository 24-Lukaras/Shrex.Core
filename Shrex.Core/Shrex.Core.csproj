<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>Shrex.Core</Title>
    <Version>1.0.0</Version>
    <Authors>Lukáš Macek</Authors>
    <Description>It stands for SHaRepoint EXtensions... obviously</Description>
    <PackageIcon>shrex-logo.png</PackageIcon>
    <RepositoryUrl>https://github.com/24-Lukaras/Shrex.Core</RepositoryUrl>
    <PackageTags>Graph;SharePoint</PackageTags>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\shrex-logo.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Shrex.Documents\Shrex.Documents.csproj" />
    <ProjectReference Include="..\Shrex.Items\Shrex.Items.csproj" />
    <ProjectReference Include="..\Shrex.Services\Shrex.Services.csproj" />
  </ItemGroup>

</Project>
